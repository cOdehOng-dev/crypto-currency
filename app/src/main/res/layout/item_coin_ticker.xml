<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_coin_rank"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="@dimen/dp_18"
            android:fontFamily="@font/notosan_regular"
            android:textColor="@color/purple75"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="10dp"/>

        <TextView
            android:id="@+id/tv_coin_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="BitCoin"
            android:layout_weight="3"
            android:textSize="@dimen/dp_18"
            android:fontFamily="@font/notosan_regular"
            android:textColor="@color/black"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="10dp"/>

        <TextView
            android:id="@+id/tv_coin_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="$4949404903"
            android:layout_weight="2"
            android:textSize="@dimen/dp_18"
            android:fontFamily="@font/notosan_regular"
            android:textColor="@color/black"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="10dp"/>

        <TextView
            android:id="@+id/tv_coin_1_hour"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1시간"
            android:layout_weight="2"
            android:textSize="@dimen/dp_18"
            android:fontFamily="@font/notosan_regular"
            android:textColor="@color/black"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="10dp"/>

        <TextView
            android:id="@+id/tv_coin_day"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="24시간"
            android:layout_weight="2"
            android:textSize="@dimen/dp_18"
            android:fontFamily="@font/notosan_regular"
            android:textColor="@color/black"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="10dp"/>

        <TextView
            android:id="@+id/tv_coin_week"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="7일"
            android:layout_weight="2"
            android:textSize="@dimen/dp_18"
            android:fontFamily="@font/notosan_regular"
            android:textColor="@color/black"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="10dp"/>

        <TextView
            android:id="@+id/tv_trade_amount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="7일"
            android:layout_weight="2"
            android:textSize="@dimen/dp_18"
            android:fontFamily="@font/notosan_regular"
            android:textColor="@color/black"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="10dp"/>




    </LinearLayout>

</layout>
